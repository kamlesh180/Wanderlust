<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Create a New Listing</h3>

            <form method="POST" action="/listings">
                <div class="mb-3">
                    <lable for="title" class="form-label"> title</lable>
                    <input name="listing[title]" placeholder="add a catchy file" type="text" class="form-control" />
                </div>

                <div class="mb-3">
                    <lable for="description" class="form-label"> Description</lable>
                    <textarea name="listing[description]" class="form-control"></textarea>
                </div>

                <div class="mb-3">
                    <lable for="image" class="form-label"> Image Link</lable>
                    <textarea name="listing[image]" placeholder="enter image URL/Link" class="form-control"></textarea>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <lable for="price" class="form-label"> Price</lable>
                        <input name="listing[price]" placeholder="1200" type="text" class="form-control" />
                    </div>

                    <div class="mb-3 col-md-8">
                        <lable for="country" class="form-label"> Country</lable>
                        <input name="listing[country]" placeholder="India" type="text" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <lable for="location" class="form-label"> Location</lable>
                    <input name="listing[location]" placeholder="U.P , Delhi" type="text" class="form-control" />
                </div>

                <br>
                <button class="btn btn-dark add-btn">Add</button>
                <br><br />
                